<article class="card">
  <div class="card-header flex-row justify-space-between">
    <h2>{{post.title}}</h2>
    <div>
      <p>Posted by {{post.user.username}}</p>
      {{#if post.createdAt}}
        <p>on {{format_date post.createdAt}}</p>
      {{/if}}
    </div>
  </div>
  <div class="card-body">
    <p>{{post.body}}</p>
  </div>
</article>
